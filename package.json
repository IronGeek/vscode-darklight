{
  "name": "vscode-darklight",
  "displayName": "Dark Light",
  "description": "Color mode switcher for Visual Studio Code",
  "version": "0.1.3",
  "publisher": "IronGeek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IronGeek/vscode-darklight.git"
  },
  "bugs": {
    "url": "https://github.com/IronGeek/vscode-darklight/issues"
  },
  "homepage": "https://github.com/IronGeek/vscode-darklight/blob/master/README.md",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "color",
    "mode",
    "dark",
    "light",
    "switch",
    "toggle"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0078d7",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/node.js",
  "browser": "./dist/web.js",
  "contributes": {
    "configuration": {
      "title": "Dark Light",
      "properties": {
        "darkLight.showNotification": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether to show notification when toggling VS Code color mode."
        }
      }
    },
    "commands": [
      {
        "command": "darkLight.toggleColorMode",
        "title": "Toggle VS Code color mode",
        "category": "DarkLight",
        "icon": "$(color-mode)"
      }
    ],
    "keybindings": [
      {
        "command": "darkLight.toggleColorMode",
        "key": "ctrl+t ctrl+k",
        "mac": "cmd+t cmd+k"
      }
    ]
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "lint": "eslint . --fix --ext .ts,.js",
    "depcheck": "npx --yes -- check-outdated --prefer-wanted --ignore-packages @types/vscode",
    "prebuild": "npm run depcheck && npm run lint",
    "build": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --watch",
    "test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=.",
    "filename": "echo $npm_package_name-$npm_package_version.vsix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vscode/test-web": "^0.0.15",
    "eslint": "^8.4.0",
    "husky": "^7.0.4",
    "ovsx": "^0.2.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "vsce": "^2.5.1",
    "webpack-cli": "^4.9.1"
  }
}
